  <body class="full-screen register">
    <div class="wrapper">
      <nav
        class="navbar navbar-expand-lg fixed-top navbar-transparent nav-down"
        color-on-scroll="200"
      >
        <div class="container">
          <div class="navbar-translate">
            <div class="navbar-header">
              <a class="navbar-brand" href="">Good Health</a>
            </div>
            <button
              class="navbar-toggler navbar-burger"
              type="button"
              data-toggle="collapse"
              data-target="#navbarToggler"
              aria-controls="navbarTogglerDemo02"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-bar"></span>
              <span class="navbar-toggler-bar"></span>
              <span class="navbar-toggler-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item"></li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="javascript:void(0)"
                  data-toggle="dropdown"
                  >Settings</a
                >
                <ul class="dropdown-menu dropdown-menu-right dropdown-danger">
                  <a class="dropdown-item" href="""
                    ><i class="nc-icon nc-tile-56"></i>&nbsp; Logout</a
                  >

                  <a class="dropdown-item" href="/login"
                    ><i class="nc-icon nc-settings"></i>&nbsp; Login</a
                  >
                </ul>
              </li>

              <li class="nav-item">
                <a class="btn btn-round btn-danger" href="">
                  <i class="nc-icon nc-cart-simple"></i> Buy now
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <div
        class="page-header"
        style="background-image: url('/image/soroush-karimi.jpg')"
      >
        <div class="filter"></div>
        <div class="container">
          <div class="row">
            <div class="col-md-6 col-sm-7 col-12 ml-auto">
              <div class="info info-horizontal">
                <div class="icon">
                  <i class="fa fa-umbrella"></i>
                </div>
                <div class="description">
                  <h3>We've got you covered</h3>
                  <p>
                    Larger, yet dramatically thinner. More powerful, but
                    remarkably power efficient. Everything you need in a single
                    case.
                  </p>
                </div>
              </div>
              <div class="info info-horizontal">
                <div class="icon">
                  <i class="fa fa-map-signs"></i>
                </div>
                <div class="description">
                  <h3>Clear Directions</h3>
                  <p>
                    Efficiently unleash cross-media information without
                    cross-media value. Quickly maximize timely deliverables for
                    real-time schemas.
                  </p>
                </div>
              </div>
              <div class="info info-horizontal">
                <div class="icon">
                  <i class="fa fa-user-secret"></i>
                </div>
                <div class="description">
                  <h3>We value your privacy</h3>
                  <p>
                    Completely synergize resource taxing relationships via
                    premier niche markets.
                  </p>
                </div>
              </div>
            </div>
            <div class="col-md-4 col-sm-5 col-12 mr-auto">
              <div class="card card-register">
                <h3 class="card-title text-center">Register</h3>
                <div class="social">
                  <button
                    href="#paper-kit"
                    class="btn btn-just-icon btn-facebook"
                  >
                    <i class="fa fa-facebook"></i>
                  </button>
                  <button
                    href="#paper-kit"
                    class="btn btn-just-icon btn-google"
                  >
                    <i class="fa fa-google"></i>
                  </button>
                  <button
                    href="#paper-kit"
                    class="btn btn-just-icon btn-twitter"
                  >
                    <i class="fa fa-twitter"></i>
                  </button>
                </div>

                <div class="division">
                  <div class="line l"></div>
                  <span>or</span>
                  <div class="line r"></div>
                </div>
                <form
                  class="register-form"
                  action="/process_update"
                  method="post"
                >
                <input type="number" name="id" hidden value="<%= userDetail.id %>">
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Name"
                    name="name"
                    value="<%= userDetail.name %>"
                  />
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Address"
                    name="address"
                    value="<%= userDetail.address %>"
                  />
                  <input
                    type="number"
                    class="form-control"
                    placeholder="Phone Number"
                    name="phone_number"
                    value="<%= userDetail.phone_number %>"
                  />
                  <% const birthDate = new Date(userDetail.birth_of_date + 'Z'); %>
                    <% const formattedDate = birthDate.toISOString().split('T')[0]; %>

                    <input
                    type="date"
                    class="form-control"
                    placeholder="Date Of Birth"
                    name="birth_of_date"
                    value="<%= formattedDate %>"
                    />
                               
                  <select name="gender" class="form-control my-2" value="<%= userDetail.gender %>">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="undefined">Another</option>
                  </select>

                  <input
                    type="eamil"
                    class="form-control"
                    placeholder="Email"
                    name="email"
                    value="<%= userDetail.email %>"
                  />

                 

                  <label style="color: black" class="mt-2"
                    >Enter your avatar</label
                  >
                  <input
                    type="file"
                    class="form-control"
                    id="logo"
                    placeholder="Enter your avatar"
                    name="avatar"
                    value="<%= userDetail.avatar %>"
                  />
                  <input
                    type="text"
                    class="form-control"
                    id="logo"
                    placeholder="Enter your avatar"
                    name="avatar_old"
                    value="<%= userDetail.avatar %>"
                    hidden
                  />

                  <button type="submit" class="btn btn-block btn-round">
                    Register
                  </button>
                </form>
                <div class="login">
                  <p>Already have an account? <a href=""></a></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="demo-footer text-center">
          <h6>
            &copy;
            <script>
              document.write(new Date().getFullYear());
            </script>
            , made with <i class="fa fa-heart heart"></i> by Creative Tim
          </h6>
        </div>
      </div>
    </div>
  </body>
  <!-- Core JS Files -->
  <script src="/js/jquery-3.2.1.min.js" type="text/javascript"></script>
  <script
